<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="-100dp"
        android:background="#9357b4"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="520dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="-15dp"
            android:layout_marginEnd="100dp"
            android:orientation="vertical"
            android:background="@drawable/greybackground">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton3"
                android:layout_gravity="right"
                android:background="@drawable/next"
                android:layout_marginRight="20dp" />

            <ImageView android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/secure"
                android:layout_marginTop="-40dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageButton" />

            <TextView android:layout_width="114dp"
                android:layout_height="30dp"


                android:paddingLeft="5dp"
                android:layout_marginTop="30dp"
                android:text="Name"
                android:textSize="20dp"
                android:id="@+id/tv1" />
            <TextView android:layout_width="114dp"
                android:layout_height="30dp"

                android:paddingLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="Phone No"
                android:textSize="20dp"
                android:id="@+id/tv2" />




        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="125dp"
            android:orientation="vertical"

            android:layout_marginTop="-375dp"
            android:layout_marginLeft="140dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:id="@+id/Textt1"
                android:textSize="20dp"
                android:textColor="#808080"
                android:background="#f3f3f3"/>

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:id="@+id/Textt2"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:background="#f3f3f3"
                android:textColor="#808080"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="30dp"
            android:paddingTop="50dp">

            <TextView
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:text="  ADD 3 CONTACTS"
                android:textSize="20dp"
                android:textColor="#faa519"
                android:textStyle="bold"
                android:id="@+id/textView"
                android:layout_marginTop="-05dp"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="#f3f3f3"
                android:id="@+id/editText"
                android:hint="Contact 1"
                android:layout_marginTop="18dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:background="#f3f3f3"
                android:hint="Contact 2"
                android:textSize="20dp"
                android:layout_marginTop="15dp"/>


            <EditText
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:background="#f3f3f3"
                android:hint="Contact 3"
                android:textSize="20dp"
                android:layout_marginTop="15dp"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton2"
                android:layout_marginTop="25dp"
                android:onClick="searchcontacts"
                android:background="@drawable/addcontacts"
                android:layout_marginLeft="103dp" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>